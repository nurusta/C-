class Swap {
    public static void Main()
    {
        Console.WriteLine("Please give a number as 1st variable:");
        int val1 = Convert.ToInt32(Console.ReadLine());
        Console.WriteLine("Please give a number as 2nd variable:");
        int val2 = Convert.ToInt32(Console.ReadLine());

        val1 = val1 + val2;
        val2 = val1 - val2;
        val1 = val1 - val2;
       
       Console.WriteLine("The value of the 1st variable: " + val1);
       Console.WriteLine("The value of the 2nd variable: " + val2);
    }
}
